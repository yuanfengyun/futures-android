<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/status_bar</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/launch</item>
        <item name="android:listDivider">@drawable/fragment_quote_divider</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/quote_background</item>
    </style>

    <style name="LoginActivityTheme" parent="AppTheme">
        <!--preview window添加背景图-->
        <item name="android:windowBackground">@mipmap/ic_login</item>
    </style>

    <style name="SearchActivityTheme" parent="AppTheme">
        <!--preview window添加背景图-->
        <item name="android:windowBackground">@color/search_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--下单/撤单/自选合约弹出框,固定大小-->
    <style name="Theme.Light.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!--自定义键盘-->
    <style name="Theme.Light.No.Dim.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--popupWindow样式框，淡入淡出-->
    <style name="anim_menu_quote">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="RadioButtonTabDownHandicap">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/activity_future_info_radio_button_text_selector
        </item>
        <item name="android:background">
            @drawable/activity_future_info_radio_button_handicap_selector
        </item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioButtonTabDown">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/activity_future_info_radio_button_text_selector
        </item>
        <item name="android:background">@drawable/activity_future_info_radio_button_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioButtonTabDownTransaction">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">
            @drawable/activity_future_info_radio_button_transaction_selector
        </item>
        <item name="android:gravity">center</item>
    </style>

</resources>
